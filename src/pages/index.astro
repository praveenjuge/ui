---
import { AUTHOR_X, SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Layout from "../Layout.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";
import SinglePost from "../SinglePost.astro";
const tips = (await getCollection("tips")).sort(
  (a: any, b: any) => parseInt(b.id) - parseInt(a.id)
);
---

<Layout title="Home">
  <header class="text-center max-w-xs mx-auto space-y-2">
    <h1 class="text-3xl font-bold tracking-tight">{SITE_TITLE}</h1>
    <p class="text-lg text-slate-500">{SITE_DESCRIPTION}</p>
    <div
      class="flex items-center justify-center gap-1.5 text-xs font-medium pt-2 *:rounded-full *:px-3 *:py-1 *:flex *:items-center *:gap-1.5 *:font-medium *:border-[0.5px] *:border-slate-300 dark:*:border-slate-700 *:shrink-0 *:select-none *:bg-white dark:*:bg-slate-900"
    >
      <a target="_blank" href={AUTHOR_X}>
        <Icon
          name="mynaui:brand-twitter"
          class="size-5 stroke-2 text-sky-500"
        />
        Follow for Updates
      </a>
      <a target="_blank" href="https://github.com/praveenjuge/ui">
        <Icon name="mynaui:brand-github" class="size-5 stroke-2" />
        GitHub
      </a>
      <a target="_blank" href="/rss.xml">
        <Icon name="mynaui:rss" class="size-5 stroke-2 text-orange-500" />
        RSS
      </a>
    </div>
  </header>
  <main id="main" class="space-y-24 my-24">
    {tips.map((tip: any) => <SinglePost tip={tip} />)}
  </main>
</Layout>
